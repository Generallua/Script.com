local function createToggle(text, default, callback)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0.9, 0, 0, 27)
    btn.BackgroundColor3 = Color3.fromRGB(45, 45, 45)
    btn.BorderSizePixel = 0
    btn.Font = Enum.Font.SourceSansSemibold
    btn.TextSize = 13.5
    btn.TextColor3 = Color3.fromRGB(230, 230, 230)
    btn.AutoButtonColor = false
    btn.Text = text .. ": " .. (default and "âœ…" or "âŒ")
    Instance.new("UICorner", btn).CornerRadius = UDim.new(0, 7)

    local enabledToggle = default
    btn.MouseButton1Click:Connect(function()
        enabledToggle = not enabledToggle
        btn.Text = text .. ": " .. (enabledToggle and "âœ…" or "âŒ")
        callback(enabledToggle)
    end)
    return btn
end

local function createLabeledTextbox(labelText, placeholder, defaultValue, callback)
    local container = Instance.new("Frame")
    container.Size = UDim2.new(0.9, 0, 0, 45)
    container.BackgroundTransparency = 1

    local label = Instance.new("TextLabel", container)
    label.Size = UDim2.new(1, 0, 0, 18)
    label.BackgroundTransparency = 1
    label.Font = Enum.Font.SourceSansSemibold
    label.TextSize = 12.75
    label.TextColor3 = Color3.fromRGB(255, 255, 255)
    label.Text = labelText
    label.TextXAlignment = Enum.TextXAlignment.Left

    local textbox = Instance.new("TextBox", container)
    textbox.Size = UDim2.new(1, 0, 0, 23)
    textbox.Position = UDim2.new(0, 0, 0, 2)
    textbox.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    textbox.TextColor3 = Color3.fromRGB(255, 255, 255)
    textbox.Font = Enum.Font.SourceSans
    textbox.TextSize = 12.75
    textbox.PlaceholderText = placeholder
    textbox.Text = tostring(defaultValue)
    textbox.ClearTextOnFocus = false
    textbox.TextXAlignment = Enum.TextXAlignment.Center
    Instance.new("UICorner", textbox).CornerRadius = UDim.new(0, 6)

    textbox.FocusLost:Connect(function(enterPressed)
        if enterPressed then
            callback(textbox.Text)
        end
    end)

    return container, textbox
end

createToggle("ğŸ¯ à¹€à¸›à¸´à¸”à¸£à¸°à¸šà¸š", false, function(val)
    enabled = val
    circle.Visible = val
end).Parent = frame

local radiusContainer, radiusBox = createLabeledTextbox("ğŸ“ à¸à¸³à¸«à¸™à¸”à¸£à¸°à¸¢à¸°à¸§à¸‡à¸à¸¥à¸¡ (Radius):", "10-1000", circleRadius, function(text)
    local n = tonumber(text)
    if n and n >= 10 and n <= 1000 then
        circleRadius = n
        circle.Radius = circleRadius
    else
        radiusBox.Text = tostring(circleRadius)
    end
end)
radiusContainer.Parent = frame

createToggle("ğŸš« à¹„à¸¡à¹ˆà¹€à¸¥à¹‡à¸‡à¸«à¸²à¸à¸¡à¸µà¸ªà¸´à¹ˆà¸‡à¸à¸µà¸”à¸‚à¸§à¸²à¸‡", false, function(v) ignoreObstruction = v end).Parent = frame
createToggle("ğŸ‘¥ à¹„à¸¡à¹ˆà¹€à¸¥à¹‡à¸‡à¸—à¸µà¸¡à¹€à¸”à¸µà¸¢à¸§à¸à¸±à¸™", false, function(v) ignoreSameTeam = v end).Parent = frame
createToggle("ğŸ’€ à¹„à¸¡à¹ˆà¹€à¸¥à¹‡à¸‡à¸„à¸™à¹€à¸¥à¸·à¸­à¸” 0", false, function(v) ignoreZeroHealth = v end).Parent = frame
createToggle("ğŸ¤ à¹„à¸¡à¹ˆà¹€à¸¥à¹‡à¸‡à¹€à¸à¸·à¹ˆà¸­à¸™à¹ƒà¸™à¹€à¸‹à¸´à¸Ÿà¹€à¸§à¸­à¸£à¹Œ", false, function(v) ignoreFriends = v end).Parent = frame
