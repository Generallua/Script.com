local ignoreFriends = false
local prioritizeHoldingTool = false
local aimOnlyHoldingTool = false -- à¹€à¸à¸´à¹ˆà¸¡à¸•à¸±à¸§à¹à¸›à¸£à¹ƒà¸«à¸¡à¹ˆ
local enabled = false
